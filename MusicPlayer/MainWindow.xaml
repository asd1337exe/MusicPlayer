<Window x:Class="MusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Music Player" Height="200" Width="350"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical">

            <TextBlock Text="{Binding CurrentSong.FileName}"
                       FontSize="16"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"/>
            <TextBlock Text="{Binding CurrentSong.Duration}"
                        FontSize="16"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        TextAlignment="Center"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Content="Open" Width="70" Click="Open_Click"/>
                <Button Content="PlayPause" Width="70" Click="PlayPause_Click"/>
                <Button Content="Stop" Width="70" Click="Stop_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
