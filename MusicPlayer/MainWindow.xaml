<Window x:Class="MusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayer" xmlns:viewmodels="clr-namespace:MusicPlayer.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical">

            <!-- Название текущего трека -->
            <TextBlock Text="{Binding CurrentSong.FileName, UpdateSourceTrigger=PropertyChanged}"
                       FontSize="16"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       TextAlignment="Center" x:Name="outputText"/>

            <!-- Панель кнопок управления -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Content="Open" Width="70" Click="Open_Click"/>
                <Button Content="Play" Width="70" Click="Play_Click"/>
                <Button Content="Pause" Width="70" Click="Pause_Click"/>
                <Button Content="Stop" Width="70" Click="Stop_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
